<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.master_detailapplication.ui.detail.adapters.MovieDetailsItemViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:foregroundGravity="left"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:visibility="@{viewModel.castsList == false ? View.GONE : View.VISIBLE }">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:paddingBottom="8dp"
                android:text="@{viewModel.name}"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivMoviePoster"
                tools:text="title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/layout_genre"
            android:visibility="@{viewModel.castsList ? View.GONE : View.VISIBLE }"
            app:viewModel="@{viewModel}" />
    </LinearLayout>
</layout>